                cols: 2
                Label:
                    text: 'Username'
                TextInput:
                    id: usrname
                    multiline: False
                Label:
                    text: "Password"
                TextInput:
                    id: pwd
                    password: True
            Button:
                text: "Submit"
            Button:
                text: "Go back"
                on_release: app.root.current = 'Passenger'


